<% if tasks.any? %>
  <ul>
    <% tasks.each do |tasks| %>
      <li>
        <div>
          <div>
            <%= link_to tasks.user.name, users_path(tasks.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= tasks.created_at %></span>
          </div>
          <div>
            <p><%= link_to tasks.id,tasks %>:<%= tasks.status %> &gt; <%= tasks.content %></p>
          </div>
        </div> 
      </li>
    <% end %>
  </ul>

<% end %>